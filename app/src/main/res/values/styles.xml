<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme." parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="User_EditText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Login_Btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:background">@drawable/selector_login_btn</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Login_TextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Login_TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_et_bg</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

</resources>
